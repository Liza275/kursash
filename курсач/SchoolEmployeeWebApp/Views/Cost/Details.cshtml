@model SchoolBusinessLogic.ViewModel.CostViewModel

@{
    ViewData["Title"] = "Затрата";
}

<h1>Подробная информация</h1>

<div>
    <dl class="row">
        <div class="col-sm-6">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sum)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sum)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmployeeName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmployeeName)
            </dd>
        </div>
            <table class="table col-sm-6">
                <thead>
                    <tr>
                        <th>
                            Кружок
                        </th>
                        <th>
                            Дополнительные расходы
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Societies)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Item1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Item2)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="Index">Назад</a>
</div>
