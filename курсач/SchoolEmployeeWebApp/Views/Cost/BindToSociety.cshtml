@model SchoolBusinessLogic.BindingModel.BindCostToSocietyBindingModel

@{
    ViewData["Title"] = "Выставление затрат";
}

<h1>Выставление затрат</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BindToSociety">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SocietyId" class="control-label"></label>
                <select asp-for="SocietyId" class="form-control" asp-items="ViewBag.SocietiesId"></select>
                <span asp-validation-for="SocietyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostId" class="control-label"></label>
                <select asp-for="CostId" class="form-control" asp-items="ViewBag.CostsId"></select>
                <span asp-validation-for="CostId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalCost" class="control-label"></label>
                <input asp-for="AdditionalCost" class="form-control" value="0"/>
                <span asp-validation-for="AdditionalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}