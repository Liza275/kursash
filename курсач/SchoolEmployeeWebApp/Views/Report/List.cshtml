@model SchoolBusinessLogic.BindingModel.ReportBindingModel

@{
    ViewData["Title"] = "Формирование списков";
}


<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedLessons" class="control-label"></label>
                <select asp-for="SelectedLessons" class="form-control" asp-items="ViewBag.LessonsId"></select>
                <span asp-validation-for="SelectedLessons" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="SaveToWord" value="Сохранить в Word" class="btn btn-primary w-100" />
            </div>
            <div class="form-group">
                <input type="submit" asp-action="SaveToExcel" value="Сохранить в Excel" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}